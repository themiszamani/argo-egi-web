    <view xmlns:e="http://software.in2p3.fr/lavoisier/entries.xsd" name="listSiteScopes">
        <info>
            <description>GOC DB : List of Sites Scope</description>
            <category>GOC DB</category>
        </info>


        <connector type="XMLConnector">
            <parameter name="content" eval="view('goc.siteList')/results/SITE/SCOPES/SCOPE/text()"/>
        </connector>

        <processors>
            <element in="e:entries">
                <element-ignore in="e:entry"></element-ignore>
                <element-create>
                    uniq(../e:entry,'text()')
